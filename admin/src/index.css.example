@tailwind base;
@tailwind components;
@tailwind utilities;

/* Import custom fonts - ADD YOUR FONT IMPORT HERE */
@import './assets/fonts/custom-fonts.css';

/* Ensure the root element takes full height */
#root {
  min-height: 100vh;
}

/* Basic reset to ensure content is visible */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Apply font globally - UPDATE WITH YOUR FONT NAME */
body {
  /* Option 1: If you want your custom font as primary */
  /* font-family: 'YourCustomFont', 'Noto Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; */
  
  /* Option 2: Keep current font setup */
  font-family: 'Noto Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-weight: 400;
  line-height: 1.5;
}

/* Headings with slightly heavier weight */
h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: 1.2;
  /* Optional: Use custom font only for headings */
  /* font-family: 'YourCustomFont', 'Noto Sans', sans-serif; */
}

/* Better readability for body text */
p {
  line-height: 1.6;
}

/* Consistent button text */
button {
  font-family: inherit;
  font-weight: 500;
}

/* Form inputs should also use the same font */
input, textarea, select {
  font-family: inherit;
}

/* Code and monospace elements */
code, pre, .font-mono {
  font-family: ui-monospace, SFMono-Regular, 'SF Mono', Consolas, 'Liberation Mono', Menlo, monospace;
}

/* Custom font utility classes */
@layer utilities {
  .font-custom {
    font-family: 'YourCustomFont', sans-serif;
  }
  
  .font-custom-bold {
    font-family: 'YourCustomFont', sans-serif;
    font-weight: 700;
  }
}
