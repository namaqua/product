{
  "name": "our-products",
  "version": "0.1.0",
  "description": "Product Information Management System",
  "private": true,
  "workspaces": [
    "pim",
    "pim-admin"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd pim && npm run start:dev",
    "dev:frontend": "cd pim-admin && npm run dev",
    "install:all": "npm install && cd pim && npm install && cd ../pim-admin && npm install",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd pim && npm run build",
    "build:frontend": "cd pim-admin && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd pim && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd pim && npm run lint",
    "lint:frontend": "cd pim-admin && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd pim && npm run format",
    "format:frontend": "cd pim-admin && npm run format",
    "format:check": "npm run format:check:backend && npm run format:check:frontend",
    "format:check:backend": "cd pim && npm run format:check",
    "format:check:frontend": "cd pim-admin && npm run format:check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:namaqua/product.git"
  },
  "author": "Colin Roets",
  "license": "PRIVATE",
  "homepage": "https://github.com/namaqua/product#readme"
}
