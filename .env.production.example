# Production Environment Configuration Template
# Copy this to .env and update with your production values

# Application
NODE_ENV=production
APP_NAME=Product Management System
APP_URL=http://104.248.247.65
API_URL=http://104.248.247.65/api
API_PORT=3010
FRONTEND_PORT=3000

# Database
DB_HOST=postgres-product
DB_PORT=5432
DB_NAME=product_db
DB_USER=product_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_HERE

# Redis
REDIS_HOST=redis-product
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_HERE

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_32
JWT_REFRESH_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://104.248.247.65

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DEST=./uploads

# Elasticsearch (optional)
ELASTIC_HOST=elasticsearch
ELASTIC_PORT=9200
ELASTIC_PASSWORD=CHANGE_THIS_ELASTIC_PASSWORD

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@your-domain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Backup
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=
BACKUP_S3_KEY=
BACKUP_S3_SECRET=
