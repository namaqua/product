{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchOptions": {
      "excludeDirectories": [
        "**/node_modules",
        "**/dist",
        "**/_backup_*",
        "src/modules/products/_backup_entities"
      ]
    }
  },
  "exclude": [
    "**/_backup_*/**",
    "**/*.backup.*",
    "src/modules/products/_backup_entities/**"
  ]
}
