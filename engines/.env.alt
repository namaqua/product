# Application
NODE_ENV=development
PORT=3010

# Database - Using alternative port to avoid conflicts
DB_HOST=localhost
DB_PORT=5434
DB_NAME=pim_dev
DB_USER=pim_user
DB_PASSWORD=secure_password_change_me

# Alternative names for backwards compatibility
DATABASE_HOST=localhost
DATABASE_PORT=5434
DATABASE_NAME=pim_dev
DATABASE_USER=pim_user
DATABASE_PASSWORD=secure_password_change_me

# JWT
JWT_SECRET=your-super-secret-key-change-me-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-me-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Redis (using alternative port)
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=

# Elasticsearch (using alternative port)
ELASTICSEARCH_NODE=http://localhost:9201
ELASTICSEARCH_PRODUCTS_INDEX=pim_products
ELASTICSEARCH_CATEGORIES_INDEX=pim_categories

# Logging
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DEST=./uploads

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=dev-session-secret-change-in-production
